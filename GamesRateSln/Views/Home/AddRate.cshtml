@model AddRateModel
@{
    ViewData["Title"] = "Rate game";
}


<div class="container">

    <div class="row">
        <div class="col-auto">
            <h4> @Html.Label(Model.GameTitle)</h4>

        </div>
        <div class="col-auto">
            <h4> @Html.Label(Model.GameYear)</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-auto">
            @using (Html.BeginForm("AddRate", "Home", FormMethod.Post))
            {
                <div class="form-row">
                    <div class="col-12">
                        <fieldset class="rating">
                            @for (int i = 10; i >= 0; i--)
                            {
                                @Html.RadioButtonFor(x => x.Value, i, new { @id = $"star{i}" })
                                @Html.Label(string.Empty, $"{i} star", new { @for = $"star{i}" })
                            }
                        </fieldset>
                    </div>
                    <div class="form-row">
                        <div class="col-12">
                            @Html.ValidationMessageFor(x => x.Value, null, new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-row">
                    <div class="col-auto">
                        @Html.LabelFor(x => x.PersonName)
                        @Html.EditorFor(x => x.PersonName, "Name", new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                    </div>
                    <div class="form-row">
                        @Html.ValidationMessageFor(x => x.PersonName, null, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-auto">
                        @Html.LabelFor(x => x.PersonEmail)
                        @Html.EditorFor(x => x.PersonEmail, "Email", new { htmlAttributes = new { @type = "email", @class = "form-control", @required = "required" } })
                        @Html.ValidationMessageFor(x => x.PersonEmail, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-row">
                        @Html.ValidationMessageFor(x => x.PersonEmail, null, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-12">
                            @Html.LabelFor(x => x.Comment)
                        </div>
                        <div class="col-12">
                            @Html.TextAreaFor(x => x.Comment, 5, 40, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                        </div>
                        <div class="form-row">
                            @Html.ValidationMessageFor(x => x.Comment, null, new { @class = "text-danger" })
                        </div>
                        
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-auto">
                        <a href="/" class="btn btn-secondary">Close</a>
                    </div>
                    <div class="col-auto">
                        <input type="submit" class="btn btn-primary" title="Rate" value="Rate" />
                    </div>
                </div>
                @Html.HiddenFor(x => x.GameId)
                @Html.HiddenFor(x => x.GameTitle)
                @Html.HiddenFor(x => x.GameYear)
            }
        </div>
    </div>
</div>
