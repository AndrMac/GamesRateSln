@model AddRateModel



<div class="container">

    <div class="row">
        <div class="col-6">
            @Html.Label(Model.GameTitle)
        </div>
        <div class="col-6">
            @Html.Label(Model.GameYear)
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            @using (Html.BeginForm("AddRate", "Home", FormMethod.Post))
            {
                <div class="row">
                    <div class="form-group">
                        <div class="col-12">
                            @Html.LabelFor(x => x.PersonName)
                        </div>
                        <div class="col-12">
                            @Html.EditorFor(x => x.PersonName, "Name", new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        <div class="col-12">
                            @Html.LabelFor(x => x.PersonEmail)
                        </div>
                    </div>
                    <div class="col-12">
                        @Html.EditorFor(x => x.PersonEmail, "Email", new { htmlAttributes = new { @type = "email", @class = "form-control" } })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        <fieldset class="rating">
                            @for (int i = 10; i > 0; i--)
                            {
                                @Html.Label(string.Empty, string.Empty, new { @for = $"star{i}" })
                                @Html.RadioButtonFor(x => x.Value, i, new { @id = $"star{i}" })
                            }
                        </fieldset>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        <div class="col-12">
                            @Html.LabelFor(x => x.Comment)
                        </div>
                        <div class="col-12">
                            @Html.TextAreaFor(x => x.Comment, 5, 40, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <input type="submit" class="btn btn-primary" title="Rate" value="Rate" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>
